<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MenuFragment">

    <!-- Экран меню -->
    <fragment
        android:id="@+id/MenuFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.menu.MenuFragment"
        android:label="@string/menu_fragment_label"
        tools:layout="@layout/fragment_menu">

        <action
            android:id="@+id/action_MenuFragment_to_signalFragment"
            app:destination="@id/signalFragment" />

        <action
            android:id="@+id/action_MenuFragment_to_envelopeFragment"
            app:destination="@id/envelopeFragment" />

        <action
            android:id="@+id/action_MenuFragment_to_infoFragment"
            app:destination="@id/infoFragment" />

        <action
            android:id="@+id/action_MenuFragment_to_SearchFragment"
            app:destination="@id/SearchFragment" />

        <action
            android:id="@+id/action_MenuFragment_to_ECGFragment"
            app:destination="@id/ECGFragment" />

        <action
            android:id="@+id/action_MenuFragment_to_spectrumFragment"
            app:destination="@id/spectrumFragment" />

        <action
            android:id="@+id/action_MenuFragment_to_emotionsFragment"
            app:destination="@id/emotionsFragment" />

        <!-- ✅ Новый переход на экран сканера -->
        <action
            android:id="@+id/action_MenuFragment_to_QrScannerFragment"
            app:destination="@id/qrScannerFragment" />
    </fragment>

    <!-- Другие экраны -->
    <fragment
        android:id="@+id/SearchFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.search.SearchScreenFragment"
        android:label="Search" />

    <fragment
        android:id="@+id/signalFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.signal.SignalFragment"
        android:label="Signal"
        tools:layout="@layout/fragment_signal" />

    <fragment
        android:id="@+id/envelopeFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.envelope.EnvelopeFragment"
        android:label="Envelope"
        tools:layout="@layout/fragment_envelope" />

    <fragment
        android:id="@+id/infoFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.info.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/ECGFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.ecg.ECGFragment"
        android:label="ECG" />

    <fragment
        android:id="@+id/spectrumFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.spectrum.SpectrumFragment"
        android:label="Spectrum" />

    <fragment
        android:id="@+id/emotionsFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.emotions.EmotionsFragment"
        android:label="Emotions"
        tools:layout="@layout/fragment_emotions" />

    <!-- ✅ Новый экран сканера QR -->
    <fragment
        android:id="@+id/qrScannerFragment"
        android:name="com.neurotech.callibrineurosdkdemo.screens.qr.QrScannerFragment"
        android:label="QR Scanner"
        tools:layout="@layout/fragment_qr_scanner" />

</navigation>
